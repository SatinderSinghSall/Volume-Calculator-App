<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".SphereActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/textView_AppName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="24dp"
        android:text="Volume of Sphere"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:letterSpacing="0.05"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Input with outlined box -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxStrokeColor="@color/purple_500"
        app:hintTextColor="@color/purple_200"
        app:boxStrokeWidth="2dp"
        app:boxBackgroundColor="#26FFFF"
        app:layout_constraintTop_toBottomOf="@id/textView_AppName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_UserInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter sphere radius"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textColorHint="@color/purple_200"
            android:padding="18dp"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Gradient Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_CalculateResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="48dp"
        android:text="Calculate Volume"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        app:cornerRadius="32dp"
        app:iconPadding="8dp"
        app:iconGravity="textStart"
        android:background="@drawable/gradient_button"
        app:rippleColor="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/textInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Result Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/resultCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#33FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/button_CalculateResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/textView_Result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="28dp"
            android:text="Result will appear here"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
